{
  "info": {
    "_postman_id": "auth-api-collection",
    "name": "Auth API Collection",
    "description": "Postman collection to test the authentication API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{base_url}}/api/auth/signup",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "signup"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"governorate\": \"Cairo\",\n  \"region\": \"Maadi\",\n  \"role\": \"user\",\n  \"phoneNumber\": \"0123456789\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Verify Email",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{base_url}}/api/auth/verify-email",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "verify-email"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"123456\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Forgot Password",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{base_url}}/api/auth/forgot-password",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "forgot-password"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Reset Password",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{base_url}}/api/auth/reset-password/:token",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "reset-password", ":token"],
          "variable": [{ "key": "token", "value": "your_reset_token_here" }]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"password\": \"newpassword123\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Check Auth",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/auth/check-auth",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "check-auth"]
        }
      },
      "response": []
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{base_url}}/api/auth/logout",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "logout"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "token", "value": "" }
  ]
}
